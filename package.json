{
  "name": "angular-typesafe-reactive-forms-helper",
  "version": "0.0.6",
  "description": "Use angular reactive forms with type-safety.",
  "main": "lib/angularTypesafeReactiveFormsHelper.js",
  "types": "lib/angularTypesafeReactiveFormsHelper.d.ts",
  "scripts": {
    "build": "npm-run-all --sequential build:**",
    "build:remove-lib": "rimraf ./lib",
    "build:tsc": "tsc",
    "build:remove-test-from-lib": "rimraf ./lib/__tests__",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write 'src/**/*.ts' 'src/**/*.js'",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "perversion": "npm run lint",
    "version": "npm run format",
    "package-version":"npm show ./ version",
    "integration-tests:clean": "rm -rf angular-typesafe-reactive-forms-helper-*.tgz",
    "integration-tests:pack": "npm pack",
    "integration-tests:copy-to-tests":"cp angular-typesafe-reactive-forms-helper-`npm run package-version --silent`.tgz ./intergationTests/angular-typesafe-reactive-forms-helper.tgz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rpbeukes/angular-typesafe-reactive-forms-helper"
  },
  "keywords": [
    "angular",
    "reactive",
    "forms",
    "angular reactive forms",
    "typesafe"
  ],
  "author": "Ruan Beukes <ruan.coder@gmail.com>",
  "contributors": ["Matt <howiempt>"],
  "license": "MIT",
  "dependencies": {},
  "peerDependencies": {
    "@angular/forms": "^9.0.6",
    "@angular/core": "^9.0.6",
    "@angular/common": "^9.0.6",
    "@angular/platform-browser": "^9.0.6",
    "rxjs": "^6.5.3",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2",
    "@angular/forms": "^9.0.6",
    "@angular/core": "^9.0.6",
    "@angular/common": "^9.0.6",
    "@angular/platform-browser": "^9.0.6",
    "rxjs": "^6.5.3",
    "tslib": "^1.10.0"
  },
  "files": [
    "lib/**/*"
  ]
}
